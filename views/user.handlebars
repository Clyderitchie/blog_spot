<div>
    <h2>{{name}}</h2>
    <div class="userPost">
        {{#each posts}}

        <h2>{{title}}</h2>

        
        <p>{{content}}</p>
        <p>${{needed_funding}}</p>
        <p>Created on: {{format_date date_created}} By: {{ name }}</p>
        <button class="del-btn" data-id="{{id}}">Delete</button>
        {{/each}}
    </div>
</div>

<h2>Create a new post</h2>

<form class="form project-form">
    <div class="form-group">
        <label for="name">Title:</label>
        <input class="form-input" type="text" id="title" />
    </div>
    <div class="form-group">
        <label for="content">content:</label>
        <input class="form-input" type="text" id="content" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Create</button>
    </div>
</form>


