{{!-- List of current posts on the Blog Spot website --}}
{{#each posts}}
<div class="card mb-3">
    <a class="text-decoration-none text-dark fs-5 fw-bolder" href="/posts/{{id}}">
        <div class="card-header">
            {{title}}
        </div>
    </a>
    <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">{{content}}</p>
        <p class="card-text">Created By: <a class="text-decoration-none text-dark"
                href="../users/{{user.id}}">{{user.name}}</a> on {{format_date date_created}}</p>
    </div>

</div>
{{/each}}